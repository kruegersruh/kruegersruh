---
import { Image } from 'astro:assets'
import logo from '@graphics/design/logo.svg'

/**
 * Logo Component
 *
 * @description Logo description
 */
interface Props {
  /**
   * Whether to load the image eagerly or lazily
   * @default 'eager'
   */
  loading?: 'eager' | 'lazy'
}

const { loading = 'eager' }: Props = Astro.props
---

<a href="/" class="flex items-center gap-1 !no-underline">
  <Image src={logo} alt="Logo" width="100" loading={loading} />
  <span class="font-bold">Kleingärtnerverein</br>Krügersruh e. V.</span>
</a>

<style lang="scss">
  a {
    color: var(--foreground-color);
  }
</style>
