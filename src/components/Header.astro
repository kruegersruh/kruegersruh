---
import Navigation from '../components/Navigation.astro'
import { DarkMode, SkipLink } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'

/**
 * Header Component
 *
 * @description A component that displays the header of the website
 */
---

<header>
  <SkipLink />
  <Navigation>
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">
        Über uns
        <Icon name="lucide:chevron-down" size="32" />
      </button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <a href="/verein">Verein</a>
        </li>
        <li class="submenu-item">
          <a href="/vorstand">Vorstand</a>
        </li>
        <li class="submenu-item">
          <a href="/stromgesellschaft">Stromgesellschaft</a>
        </li>
      </ul>
    </li>
    
    <li class="menu-item">
      <a href="/freiegaerten/">Freie Gärten</a>
    </li>

    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">
        Termine
        <Icon name="lucide:chevron-down" size="32" />
      </button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <a href="/kalender">Kalender</a>
        </li>
        <li class="submenu-item">
          <a href="/festausschuss">Festausschuss</a>
        </li>
        <li class="submenu-item">
          <a href="/gemeinschaftsarbeit">Gemeinschaftsarbeit</a>
        </li>
      </ul>
    </li>

    <li class="menu-item">
      <a href="/gallery">Fotogallerie</a>
    </li>

    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">
        Fachberatung
        <Icon name="lucide:chevron-down" size="32" />
      </button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <a href="/blog">Blog</a>
        </li>
        <li class="submenu-item">
          <a href="/faq">FAQ</a>
        </li>
      </ul>
    </li>

    <li class="menu-item">
      <a href="/kontakt">Kontakt</a>
    </li>

    <li class="menu-item type-icon animate-rotate">
      <DarkMode>
        <Icon name="lucide:moon" slot="light" />
        <Icon name="lucide:sun" slot="dark" />
      </DarkMode>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  header {
    .type-icon {
      display: block;
      margin-inline: -7px;

      svg {
        inline-size: 30px;
        block-size: 30px;
      }
    }
  }
</style>
